
@model OkuTara_Deneme_2.ViewModels.UserInRoleViewModel
@{
    ViewBag.Title = "UserRoleAdd";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<title>Admin - Kullanıcı Rol Atama</title>

<div class="p-5 d-flex justify-content-center">
    @using (Html.BeginForm("UserRoleAdd", "AdminUser", FormMethod.Post))
    {
        <h2>Kullanıcı Yetkilendirme Sayfası</h2>

        @Html.LabelFor(x => x.User.UserName)
        @Html.TextBoxFor(x => x.User.UserName, new { @class = "form-control", @readonly = "readonly" })

        @Html.LabelFor(x => x.User.UserSurname)
        @Html.TextBoxFor(x => x.User.UserSurname, new { @class = "form-control", @readonly = "readonly" })

        @Html.LabelFor(x => x.Role.RoleName)
        @Html.DropDownListFor(x => x.Role.RoleName, ViewBag.dgr as List<SelectListItem>, new { @class = "form-control" })

        @Html.HiddenFor(x => x.User.UserId)

        <br />

        <div class="d-flex justify-content-end align-items-center">
            <button class="btn btn-info" data-toggle="tooltip" data-placement="right" title="Güncelle"><i class="fa-solid fa-circle-check" ></i></button>
        </div>
    }
</div>