@model IEnumerable<OkuTara_Deneme_2.Models.Classes.HomeSliderPhoto>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<title>Admin - Ana Sayfa Slider Fotoğrafları</title>

<div class="m-xl-6 m-lg-5 m-md-4 m-sm-3 m-2 ">
    <div class="d-flex justify-content-center align-items-center text-center">
        <table class="table table-striped">
            <tr class="text-uppercase">
                <th>id</th>
                <th>fotoğraf</th>
                @*<th></th>*@
            </tr>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.PhotoId</td>
                    <td>
                        <img src="@u.PhotoUrl" style="width: 400px; height:300px;" />
                    </td>
                    @*<td>
                        <a href="@Url.Action("PageDetails", "AdminPages", new { id = u. })" class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Detay">
                                <i class="fa-solid fa-circle-info"></i>
                            </a>
                    </td>*@
                </tr>
            }
        </table>

    </div>
    <div class="mt-4 d-flex justify-content-end">
        <a href="@Url.Action("AddPhoto", "AdminHomeSliderPhoto")" class="btn btn-success" style="width: 150px;"><i class="fa-solid fa-circle-plus"></i> Yeni Fotoğraf</a>
    </div>
</div>